{
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "module": "esnext",
    "target": "esnext",
    "types": ["jest", "node"],
    "moduleResolution": "bundler"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "jest.config.js"], 
  "exclude": ["node_modules", "dist"]
}
